<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
 <persistence-unit name="site_marchant3">
      <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
   <class>tn.website.model.Personne</class>
   <class>tn.website.model.Produit</class>
   <class>tn.website.model.Administrateur</class>
   <class>tn.website.model.Client</class>
   <class>tn.website.model.Vendeur</class>
    <class>tn.website.model.Stock</class>
     <class>tn.website.model.Commande</class>
        <class>tn.website.model.Categorie</class>
   <exclude-unlisted-classes>false</exclude-unlisted-classes>
     
     
     <properties>
   <property name="eclipselink.jdbc.user" value="root" />
   <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver" />
   <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/dbSiteMarchant" />
   <property name="eclipselink.logging.level" value="INFO" />
    	 <property name="eclipselink.ddl-generation" value="create-tables" />
  <!-- <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> -->
  </properties>
 </persistence-unit>
</persistence>